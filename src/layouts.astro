npm run dev
---
const {
  title = "trvue — empowering global trade",
  description = "Submit your request. We verify suppliers and get you quotes fast.",
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#111827" />
    <link rel="icon" href="/favicon.svg" />

    <!-- ✅ CSS now loaded from /public/styles/ -->
    <link rel="stylesheet" href="/styles/global.css" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/trvue_logo.svg" />
  </head>
  <body class="bg-gray-950 text-gray-100 font-sans min-h-screen">
    <div class="max-w-5xl mx-auto px-5 pb-24">
      <header class="flex items-center justify-between gap-4 py-6">
        <a href="/" class="flex items-center gap-3 font-bold">
            <img src="/trvue_logo.svg" alt="trvue logo" class="inline-block w-32 h-32 rounded-lg shadow-lg" />
        </a>
        <nav class="flex gap-3 text-sm">
          <a href="/request" class="px-3 py-1 rounded-lg border border-gray-700">Request</a>
          <a href="/contact" class="px-3 py-1 rounded-lg border border-gray-700">Contact</a>
          <a href="/request" class="px-3 py-1 rounded-lg font-semibold text-black bg-gradient-to-tr from-blue-400 to-purple-400">Submit</a>
        </nav>
      </header>

      <slot />

      <footer class="mt-12 text-sm text-gray-400 flex items-center justify-between gap-3 flex-wrap border-t border-gray-800 pt-6">
        <div>© {new Date().getFullYear()} trvue</div>
        <div>Built with Astro • <a href="https://astro.build">astro.build</a></div>
      </footer>
    </div>
  </body>
</html>
