---
import Layout from '../layouts.astro';
import Form from '../components/Form.astro';
---
<Layout title="Contact — trvue" description="Reach out by form or email.">
  <p class="text-sm text-gray-400 mb-3">Prefer email? <a class="underline" href="mailto:hello@trvue.com">hello@trvue.com</a></p>
  <Form
    title="Contact"
    description="Ask anything—we’ll respond quickly."
    formspree="https://formspree.io/f/xldlqprl"
    netlify={false}
    name="contact"
    subject="New trvue contact message"
    redirect="/thanks"
    fields={[
      { label: 'Your name', name: 'name', required: true },
      { label: 'Email', name: 'email', required: true, type: 'email' },
      { label: 'Message', name: 'message', required: true, type: 'textarea', placeholder: 'How can we help?' },
    ]}
  />
</Layout>
